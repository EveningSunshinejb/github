.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.1);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.tab-bar-item.special {
  position: relative;
  top: -40rpx;
}

.icon-wrapper.special {
  width: 120rpx;
  height: 120rpx;
  background: #e67e22;
  border-radius: 50%;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon.special {
  width: 100rpx;
  height: 100rpx;
}

.text-wrapper {
  margin-top: 8rpx;
}

.tab-bar-text {
  font-size: 20rpx;
  line-height: 1;
}