/* pages/activity/publish/index.wxss */

/* 表单容器 */
.container {
  padding: 30rpx;
  background-color: #f6f6f6;
}

/* 表单组样式 */
.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

.error-text {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.form-input.error {
  border-color: #ff4d4f;
}

.picker-view {
  padding: 24rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border: 2rpx solid #e0e0e0;
}

.type-picker-group {
  display: flex;
  gap: 20rpx;
}

.type-picker-group picker {
  flex: 1;
}

.placeholder {
  color: #999;
}

.radio-group {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
}

.radio-label {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.location-picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 图片上传区域样式 */
.cover-uploader,
.qrcode-uploader {
  width: 100%;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background-color: #fafafa;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.cover-uploader {
  height: 400rpx;
}

.qrcode-uploader {
  height: 300rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.upload-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.qrcode-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 活动封面上传样式 */
.cover-uploader {
  width: 100%;
  height: 420rpx;
  border: 1rpx dashed #e5e5e5;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.upload-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

/* 富文本编辑器样式 */
.rich-editor {
  min-height: 300rpx;
  width: 100%;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.qrcode-uploader {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #e5e5e5;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.qrcode-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.upload-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  box-sizing: border-box;
}

/* 日期时间选择器样式 */
.time-picker-group {
  display: flex;
  gap: 10px;
}

.time-picker-group picker {
  flex: 1;
}

.picker-value {
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 4px;
}

.placeholder {
  color: #999;
}

/* 提交按钮样式 */
.btn-primary {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #FF8C00;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
}

.btn-primary:active {
  opacity: 0.8;
}