/* 全局样式 */
page {
  background-color: #f6f6f6;
  font-size: 16px;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  box-sizing: border-box;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 活动卡片样式 */
.activity-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 30rpx 0;
}

.btn-primary {
  background-color: #FF8C00;
  color: #fff;
}

.btn-default {
  background-color: #f6f6f6;
  color: #333;
  border: 1rpx solid #ddd;
}

/* 表单样式 */
.form-group {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

/* 文本样式 */
.text-primary {
  color: #FF8C00;
}

.text-secondary {
  color: #666;
}

.text-small {
  font-size: 24rpx;
}

/* 图标样式 */
.icon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}